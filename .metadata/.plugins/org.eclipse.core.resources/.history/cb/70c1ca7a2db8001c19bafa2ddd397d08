package outros_exercicios_recursividade;

public class QuantidadeRepeticoesNumeroEmOutro {
	public static void main(String[] args) {
		System.out.println(quantidadeRepeticoesNumeroEmOutro(2222, 2));
	}
	
	public static double quantidadeRepeticoesNumeroEmOutro(int numero1, int numero2) {
		if(numero1 <= 0) {
			return 0;
		}
		
		double resto = (double)numero1 / 10.0;
		
		System.out.println(resto);

		return 1 + quantidadeRepeticoesNumeroEmOutro(numero1 / numero2, numero2);
	}
}
