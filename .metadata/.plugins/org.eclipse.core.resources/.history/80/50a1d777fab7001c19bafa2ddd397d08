package atividade_avaliativa_recursao_06_04_22;

public class Questao03 {
	public static void main(String[] args) {
		System.out.println(posicaoFibonacci(1));
		System.out.println(posicaoFibonacci(2));
		System.out.println(posicaoFibonacci(3));
		System.out.println(posicaoFibonacci(4));
		System.out.println(posicaoFibonacci(20));
	}
	
	public static int posicaoFibonacci(int posicao) {
		if(posicao <= 1) {
			return 0;
		}
		if(posicao == 2) {
			return 1;
		}
		
		return posicaoFibonacci(posicao - 1) + posicaoFibonacci(posicao - 2);
	}
}
